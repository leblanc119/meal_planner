<div class="page-header">
  <h3><%= @meal.name %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">

      <dt><img src="<%= @meal.image %>" class="img-fluid" alt="Responsive image"></dt>

      <dt>Created by</dt>
      <dd><%= @meal.created_by %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/meals" class="btn btn-primary">
        Back
      </a>
      <a href="/meals/<%= @meal.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_meal/<%= @meal.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
