<!-- Validation failure messages -->
<% if @meal.errors.any? %>
  <% @meal.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Meal</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_meal" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @meal.name %>">
      </div>

      <!-- Label and input for image -->
      <div class="form-group">
        <label for="image" class="control-label">
          Image
        </label>

        <input type="text" id="image" name="image" placeholder="Image" class="form-control" value="<%= @meal.image %>">
      </div>

      <!-- Label and input for created_by -->
      <div class="form-group">
        <label for="created_by" class="control-label">
          Created by
        </label>

        <input type="text" id="created_by" name="created_by" placeholder="Created by" class="form-control" value="<%= @meal.created_by %>">
      </div>

      <button class="btn btn-success">
        Create Meal
      </button>
      or
      <a href="/meals">Cancel</a>
    </form>
  </div>
</div>
