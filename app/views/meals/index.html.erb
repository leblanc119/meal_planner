<div class="page-header">
  <h1>
    Meals
    <a href="/meals/new" class="btn btn-sm btn-success">New Meal</a>
  </h1>
</div>

<div class="row">
  <div class="col-sm-6 col-md-4">
    <% @meals.each do |meal| %>
    <div class="thumbnail">
      <div class="caption">
        <%= meal.name %>
      </div>
      <div><img src="<%= meal.image %>" alt="<%= meal.name %>" style="width:256px;height:256px;"></div>

        <a href="#" class = "btn btn-primary" role="button"><i class="fa fa-heart" aria-hidden="true"></i> Add to Favorites </a>
        <a href="/meals/<%= meal.id %>" class="btn btn-primary" role="button"> Show Meal</a>
        <a href="/meals/<%= meal.id %>/edit" class="btn btn-warning">Edit</a>
        <a href="/delete_meal/<%= meal.id %>" class="btn btn-danger" rel="nofollow">Delete</a>

    </div>
    <% end %>
  </div>
</div>
